<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_calendar_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_calendar_single"
        android:visibility="gone"
        fab:fab_colorNormal="@color/md_red_A700"
        fab:fab_hideAnimation="@anim/fab_scale_down"
        fab:fab_showAnimation="@anim/fab_scale_up"
        fab:fab_size="normal"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_calendar_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_calendar_multiple"
        android:visibility="gone"
        fab:fab_hideAnimation="@anim/fab_scale_down"
        fab:fab_showAnimation="@anim/fab_scale_up"
        fab:menu_fab_colorNormal="@color/md_red_A700"
        fab:menu_fab_size="normal"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_openDirection="up"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_calendar_multiple_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_question"
            app:fab_colorNormal="@color/md_white_1000"
            app:fab_label="Best for month"
            app:fab_size="mini"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_calendar_multiple_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_question"
            app:fab_colorNormal="@color/md_white_1000"
            app:fab_label="Best for year"
            app:fab_size="mini"
            />

    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>