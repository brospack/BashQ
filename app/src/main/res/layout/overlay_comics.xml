<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_overlay_comics_top"
        />

    <LinearLayout
        android:id="@+id/ll_comics_overlay_actions_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_overlay_comics_bottom"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_comics_overlay_action_download"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_download"
            />

        <ImageView
            android:id="@+id/img_comics_overlay_action_favourite"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_favourite_white"
            />

        <ImageView
            android:id="@+id/img_comics_overlay_action_share"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_share"
            />

    </LinearLayout>

</merge>